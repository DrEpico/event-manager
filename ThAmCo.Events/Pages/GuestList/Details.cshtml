@page
@model ThAmCo.Events.Pages.GuestList.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Guest</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.Phone)
        </dd>
    </dl>
    <h4>Bookings</h4>
    @if (Model.Guest.GuestBookings.Any())
    {
        <ul>
            @foreach (var booking in Model.Guest.GuestBookings)
            {
                <li>
                    Event: @booking.Event?.Title (@booking.Event?.EventType)<br />
                    Attended: @(booking.HasAttended ? "Yes" : "No")
                </li> 
            }
        </ul>
    } 
    else
    {
        <p>No bookings found for this guest.</p>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Guest.GuestId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
